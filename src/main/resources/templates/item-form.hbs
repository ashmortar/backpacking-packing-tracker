
{{#partial "content"}}


        <h1>Add Your Items</h1>
        <form action="/item/new" method="post">
            <label for="name">Item name</label>
            <input id="name" name="name" type="text">
            <br>
            <label for="price">Price of item: </label>
            <input id="price" name="price" type="text">
            <br>
            <label for="purchased">Have you purchased this item yet?</label>
            <select id="purchased" name="purchased" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br>
            <label for="weight">Weight of item: </label>
            <input id="weight" name="weight" type="text">
            <br>
            <label for="manufacturer">Manufacturer of item: </label>
            <input id="manufacturer" name="manufacturer" type="text">
    <button type="submit" class="btn btn-default">Add items!</button>
</form>
{{/partial}}
{{> layout.hbs}}